<div id="rails-exam">
  <div class="container">
    <div class="center-align">
      <%= image_tag "iki.png" %>
    </div>

    <div class="list">
      <table>
        <thead>
          <tr>
              <th>氏名</th>
              <th>書籍数</th>
              <th>第一作</th>
              <th>価格</th>
          </tr>
        </thead>

        <tbody>
          <% @authors.each do |author| %>
           <%= render partial: 'author', locals: { author: author } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
